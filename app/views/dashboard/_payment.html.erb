<div class="modal fade" id="makePaymentModal" tabindex="-1" role="dialog" aria-labelledby="makePaymentModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="makePaymentModalLabel">Make Payment</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
   
      <div class="container">
        <a href="qr-scan"><button class="btn btn-block btn-primary mt-5">Scan QR Code</button></a>
        <h5 class="py-5 text-center"> Or</h5>

      </div>
      <div class="form-story">
        <%= form_with(model: Contact.new, local: true, multipart: true) do |form| %>
        <div class="modal-body">
      
          <div class="mb-6">
            <div class="label">Enter PayID</div>
            <%= form.text_field :title, class: "form-control", required: true %>
          </div>

         

          <div class="mb-3 py-3 maps-autocomplete">
            <div class="label">Amount</div>
            <input id="searchTextField" type="text" size="50" class="form-control" required="true">
          </div>

          <label for="wallet">Wallet Type</label>
            <select class="custom-select d-block w-100" id="country" required>
              <option value="">Choose...</option>
              <option>XRP</option>
              <option>BTC</option>
              <option>ETH</option>
              <option>Credit/Debit Cards</option>

            </select>
         
        </div>
      </div>
      <div class="modal-footer">
        <div class="mb-6">
          <button class="btn-pay btn btn-lg btn-primary">Proceed</button>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>




<div class="modal fade" id="qrModal" tabindex="-1" role="dialog" aria-labelledby="qrModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="qrModalLabel">Make Payment to <%= current_user.payid_full %></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
   
      <div class="container">
      <div><%= @qr_code_svg %></div>
        <img src="<%= @qr_code_svg %>"
        </div>

         

    </div>
  </div>
</div>

