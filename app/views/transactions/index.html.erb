<p id="notice"><%= notice %></p>

<h1>Transactions</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Contact</th>
      <th>From value</th>
      <th>From currency</th>
      <th>To value</th>
      <th>To currency</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @transactions.each do |transaction| %>
      <tr>
        <td><%= transaction.user %></td>
        <td><%= transaction.contact %></td>
        <td><%= transaction.from_value %></td>
        <td><%= transaction.from_currency %></td>
        <td><%= transaction.to_value %></td>
        <td><%= transaction.to_currency %></td>
        <td><%= link_to 'Show', transaction %></td>
        <td><%= link_to 'Edit', edit_transaction_path(transaction) %></td>
        <td><%= link_to 'Destroy', transaction, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Transaction', new_transaction_path %>
